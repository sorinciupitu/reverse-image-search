# Exemplu de fișier .env pentru aplicația Reverse Image Search
# Copiază acest fișier ca .env și completează valorile

# Configurare Streamlit
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_FILE_WATCHER_TYPE=none

# Configurare aplicație
APP_TITLE="Reverse Image Search"
APP_DESCRIPTION="A deep learning-powered reverse image search application"

# Configurare bază de date
DATABASE_PATH=./chroma_db
MODELS_PATH=./models
DATA_PATH=./data

# Configurare model
MODEL_NAME=efficientnet_b0
MODEL_DEVICE=auto
MODEL_CACHE_DIR=./models

# Configurare căutare
DEFAULT_SEARCH_RESULTS=5
DEFAULT_SIMILARITY_THRESHOLD=0.1
MAX_SEARCH_RESULTS=50

# Configurare upload
MAX_UPLOAD_SIZE_MB=10
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,gif,bmp,tiff,webp

# Configurare logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Configurare pentru producție
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

